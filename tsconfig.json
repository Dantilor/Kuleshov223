{
  "compilerOptions": {
    "types": ["vite/client", "webworker"],
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "target": "es2020",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src",
    "src/**/*.d.ts",
    "src/workers/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}